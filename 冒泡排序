#include<stdio.h>//头文件
#include<stdlib.h>
#define  n 10//宏定义
 
int main(void)
{
	int a[10];//定义一个长度为10的数组
	int i, j, t = 0;
	for (i = 0; i < n; i++)
	{//将用户刚刚输入的十个整数从缓存去中读入
		scanf_s("%d", &a[i]);
	}
	for (i = 0; i < n-1; i++)////循环n-1轮
	{
		for (j = 0; j < n - i-1; j++)
		{
			if(a[j]<a[j+1])////如果遇到符合交换条件的两个元素，就交换两个元素的值
			{//相邻元素进行比较
				t = a[j];
				a[j] = a[j + 1];//t是中间元素，
				//不定义一个额外的变量，两个元素的值是不能直接进行交换的
				a[j + 1] = t;
			}
		}
	}
	for (i = 0; i < n; i++)
	{
		printf("%d\t", a[i]);//利用for循环遍历输出a[i]的值

	}
	system("pause");//getchar（）也行
	return 0;//程序正常运行要返回一个0
}
